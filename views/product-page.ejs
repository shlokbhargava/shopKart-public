<link rel="stylesheet" href="/css/product-page.css">


<div class="container">
    <div class="row">
        <!-- product images -->
        <div class="col-sm-5 col-12" style="height: 600px;">
            <!-- <img class="d-block w-100" src="/images/oneplus-8-5g.jpg" alt="oneplus8"> -->
        </div>
        <div class="col-sm col-12">
            
            <!-- product name -->
            <div id="product-name">
                <h4><%= product.product_name %></h4>
            </div>

            <!-- customer review -->
            <div id="customer-review" class="mt-2 mb-2">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <p> Customer  rating</p>
            </div>

            <hr>

            <!-- product price -->
            <div id="product-price">
                <li>PRICE: <span>₹<%= product.product_price %></span><b> Free Delivery</b></li>  
                <p>EMI Available</p> 
            </div>

            <hr>

            <!-- offers and discount -->
            <div id="offers">
                <b><h5>Offers and Discounts</h5></b>
                <li>Get 10% up to Rs. 1500 Instant discount on HDFC Debit EMI transactions</li>
                <li>Get Up to ₹ 10,000.00 off on Exchange <a data-toggle="modal" data-target="#exchangeDevice">Exchange Now</a> </li>
                <li>Additional 5% off on using Pay Later Option</li>
                <li>Upto Rs. 1000 cashback on paying via shopKart silver Card</li>
            </div>

            <hr>

            <!-- Different variants -->
            <div id="variants">
                <div id="storage">
                    <p></p>
                    <button type="button" class="btn btn-outline-danger" id="64">64 GB</button>
                    <button type="button" class="btn btn-outline-secondary" id="128">128 GB</button>
                    <button type="button" class="btn btn-outline-secondary" id="256">256 GB</button>
                </div>

                <div id="color">
                    <p></p>
                    <i class="fas fa-circle fa-2x" id="grey"></i>
                    <i class="fas fa-circle fa-2x" id="green"></i>
                    <i class="fas fa-circle fa-2x" id="gold"></i>
                    <i class="fas fa-circle fa-2x" id="rose"></i>
                </div>
            </div>

            <hr>

            <!-- Product Details -->
            <div id="product-description">
                <p><%= product.product_description %></p>
                <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample"    aria-expanded="false" aria-controls="collapseExample">
                    Button with data-target
                </button>
                <div class="collapse" id="collapseExample">
                    <div class="card card-body">
                      Anim pariatur cliche reprehenderit, enim eiusmod high life accusamus terry richardson ad squid. Nihil anim keffiyeh helvetica, craft beer labore wes anderson cred nesciunt sapiente ea proident.
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6 col-12">
                    <% if(locals.user) { %>
                        <button type="button" class="btn btn-raised btn-block">Add To Cart</button>
                    <% } else { %>
                        <!-- <button type="button" class="btn btn-raised btn-block" disabled>Add To Cart</button> -->
                        <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Disabled tooltip">
                            <button class="btn btn-primary" style="pointer-events: none;" type="button" disabled>Disabled button</button>
                          </span>
                    <% } %>    
                </div>
                <div class="col-sm col-12">
                    <button type="button" class="btn btn-raised btn-block">Buy Now</button>
                </div>
            </div>

            <form action="">
                <p>Rate the product</p>
                <div class="rating">
                    <i class="fas fa-star 1" onclick="rate(1)" onmouseover="rate(1)"></i>
                    <i class="fas fa-star 2" onclick="rate(2)" onmouseover="rate(2)"></i>
                    <i class="fas fa-star 3" onclick="rate(3)" onmouseover="rate(3)"></i>
                    <i class="fas fa-star 4" onclick="rate(4)" onmouseover="rate(4)"></i>
                    <i class="fas fa-star 5" onclick="rate(5)" onmouseover="rate(5)"></i>
                </div>
                <textarea type="text" placeholder="Write a review"></textarea>
                <button class="btn">Post</button>
            </form>

            <i class="fas fa-user"></i> fast delivery, genuine product. go with it.

        </div>
    </div>
</div>


<!-- Exchange Device Modal -->
<div id="exchangeDevice" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Exchange Device</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <select class="custom-select">
                    <option selected>Brand</option>
                    <option value="1">Apple</option>
                    <option value="2">Google</option>
                    <option value="3">OnePlus</option>
                    <option value="4">Samsung</option>
                </select>
                <br>
                <br>
                <select class="custom-select" disabled>
                    <option selected>Model</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>  
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#signUpModal" data-dismiss="modal">
                  Get Value
                </button>
            </div>        
        </div>
    </div>
  </div>



<script src="/js/product-page.js"></script>



