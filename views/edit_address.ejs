<link rel="stylesheet" href="/css/edit_address.css">

<!-- Edit address -->

<h3 class="text-center mt-2"><%= title %></h3>

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-6 offset-sm-3 mb-5 mt-3 card">
            <form action="/users/address/edit-save/<%= address._id %>" method="POST" class="mt-2">
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Enter First Name<span class="required">*</span></label>
                        <input type="text" name="fName" class="form-control" value="<%= address.fName %>" required>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Enter Last Name</label>
                        <input type="text" name="lName" value="<%= address.lName %>" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label>Mobile Number<span class="required">*</span></label>
                        <input type="tel" name="mNumber" class="form-control" pattern="[7-9]{1}[0-9]{9}"
                            value="<%= address.mNumber %>" required>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Alternate Mobile Number</label>
                        <input type="tel" name="altNumber" class="form-control" pattern="[7-9]{1}[0-9]{9}"
                            value="<%= address.altNumber %>">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-2">
                        <label>Flat Number<span class="required">*</span></label>
                        <input type="text" name="fNumber" class="form-control" value="<%= address.fNumber %>" required>
                    </div>
                    <div class="form-group col-sm-10">
                        <label>Address<span class="required">*</span></label>
                        <input type="text" class="form-control" name="address" value="<%= address.address %>" required>
                    </div>
                </div>
                <div class="form-group">
                    <label>Address 2</label>
                    <input type="text" class="form-control" name="address2" value="<%= address.address2 %>">
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-3">
                        <label>City<span class="required">*</span></label>
                        <input type="text" class="form-control" name="city" value="<%= address.city %>" required>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>State<span class="required">*</span></label>
                        <input type="text" class="form-control" name="state" value="<%= address.state %>" required>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Country<span class="required">*</span></label>
                        <input type="text" class="form-control" name="country" value="<%= address.country %>" required>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Zip<span class="required">*</span></label>
                        <input type="number" class="form-control" name="zip" value="<%= address.zip %>" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-raised mb-3">Save</button> 
                <button type="reset" class="btn btn-raised mb-3">Clear All</button>
            </form>
        </div>
    </div>
</div>