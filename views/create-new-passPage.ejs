<html>

<head>
    <style>
        footer {
            position: relative;
            margin-bottom: 0;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-light fixed-top">
            <a class="navbar-brand" style="color: floralwhite;" href="/">
                shopKart
            </a>
            <a href="http://localhost:8000/" class="btn btn-outline-light" role="button" target="_blank">Click Here To
                Sign In</a>
        </nav>
    </header>

    <div>
        <% if ( resetToken.isValid ) { %>
        <form action="" class="new-passwordForm" method="POST">
            <div class="card text-center col-12 col-sm-4 offset-sm-4 mb-5">
                <div class="card-header">
                    <h5><%= title %></h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" class="form-control" name="new_password" id="new_password" required>
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" name="confirm_new_password" required>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="token_id" value="<%= resetToken._id %>">
                    </div>
                    <button class="btn btn-outline-primary" id="reset-pass" type="submit">Submit</button>
                </div>
                <div class="card-footer text-muted">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle fa-lg"> Password must be at least 8 characters</i>
                    </div>
                </div>
            </div>
        </form>
        <% } else { %>
            <div class="card text-center col-12 col-sm-4 offset-sm-4 mb-5">
                <div class="card-header">
                    <h5><%= title %></h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" class="form-control" name="new_password" id="new_password" disabled>
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" name="confirm_new_password" disabled>
                    </div>
                    <button class="btn btn-outline-primary" id="reset-pass" type="submit" disabled>Submit</button>
                </div>
                <div class="card-footer text-muted">
                    <div class="alert alert-warning" role="alert">
                        <i class="far fa-times-circle fa-lg"> Session Expired!</i> 
                    </div>
                </div>
            </div>
        <% } %>
    </div>


    <script src="/js/create-new-passPage.js"></script>
</body>

</html>