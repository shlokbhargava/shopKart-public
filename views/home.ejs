<link rel="stylesheet" href="/css/home.css">

<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="col-12 col-sm-12" src="/images/grocery.jpg" style="height: 65vh; opacity: 0.85;"
                alt="First slide">
            <div style="left: 10%;" class="d-none d-sm-block col-sm-6 carousel-caption">
                <h2><span class="badge badge-danger">COVID-19</span>
                    <span class="badge badge-warning">Be Safe</span></h2>
                <h3>Get Your Essentials Delivered at your Doorstep</h3>
                <h2><a href="#" class="badge badge-dark">SHOP NOW</a></h2>
            </div>
        </div>
        <div class="carousel-item">
            <img class="col-12 col-sm-12" src="/images/mega-sale.jpg" style="height: 65vh;" alt="Third slide">
            <div class="d-none d-sm-block col-sm-6 carousel-caption" style="left: 7%; top: 25%;">
                <h2><span class="badge badge-light">LIVE</span></h2>
                <h3>Mega Sale is Now Live</h3>
                <h2><a href="#" class="badge badge-dark">SHOP NOW</a></h2>
            </div>
        </div>
        <div class="carousel-item">
            <img class="col-12 col-sm-12" src="/images/tv-1.jpg" style="height: 65vh;" alt="Second slide">
            <div class="d-none d-sm-block col-sm offset-sm-1 carousel-caption">
                <h2><span class="badge badge-info">Hurry!</span></h2>
                <h3>Upto 70% off on select electronic items</h3>
                <h2><a href="#" class="badge badge-dark">SHOP NOW</a></h2>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


