<link rel="stylesheet" href="/css/user_cart.css">

<div class="row">
    <div class="col-12 col-sm-6 offset-sm-3">
        <div class="alert alert-success" role="alert">

        </div>
    </div>
    <div class="col-12 col-sm-2 offset-sm-1">
        <a href="/users/checkout/<%= user._id %>" role="button" id="checkout-button" class="btn btn-outline-dark mb-3"><i
                class="fas fa-shopping-bag"></i> Checkout</a>
    </div>
</div>

<br>

<div class="row">
    <div class="col-12 col-sm-8 offset-sm-2 mb-5">
        <% for (cart of cart) { %>
        <div class="box mb-1 row">
            <div class="col-3 img">
                <img src="" alt="<%= cart.product.product_name %>">
            </div>
            <div class="col-9 details">
                <div class="float-left">
                    <a href="/product/product-page/<%= cart.product._id %>">
                        <h5><%= cart.product.product_name %></h5>
                    </a>
                    <small>In stock</small>
                    <br>
                    <p>Free Delivery</p>
                    <div class="quantity">
                        <i class="far fa-plus-square"> </i>
                        <span class="qty"> </span>
                        <i class="far fa-minus-square"> </i> <span class="max-min-qty"></span>
                    </div>
                    <br>
                    <a href="/users/cart/delete/<%= cart._id %>">Remove from cart</a>
                </div>
                <div class="float-right">
                    <p class="delivery-date"></p>
                    <p><b>Price :</b> â‚¹ <big><%= cart.product.product_price %></big></p>
                    <input type="hidden" class="price" value="<%= cart.product.product_price %>">
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>



<script src="/js/user_cart.js"></script>